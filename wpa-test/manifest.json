// https://developer.mozilla.org/en-US/docs/Web/Manifest

{
  "name": "Minimal app to try PWA", // 网页显示给用户的完整名称
  "short_name": "Minimal PWA", // 当空间不足以显示全名时的网站缩写名称
  "description": "", // —— 关于网站的详细描述
  "display": "standalone", // 首选的显示方式：fullscreen, standalone(看起来像是native app)，minimal-ui(有简化的浏览器控制选项) 和 browser(常规的浏览器 tab)
  "start_url": "/",  //  网页的初始 相对 URL（比如 /）
  "theme_color": "#8888ff",   // 网站的主题颜色，一般都与背景颜色相同，它可以影响网站的显示
  "background_color": "#aaaaff",   // 启动屏和浏览器的背景颜色
  // "scope": "", //  —— 导航范围。比如，/app/的scope就限制 app 在这个文件夹里。
  // "orientation": "any", // —— 首选的显示方向：any, natural, landscape, landscape-primary, landscape-secondary, portrait, portrait-primary, 和 portrait-secondary。
  "icons": [ // 定义了 src URL, sizes和type的图片对象数组
    {
      "src": "e.png",
      "sizes": "256x256",
      "type": "image/png"
    }
  ]
}
